Algorithm
problem 1:
https://leetcode-cn.com/problems/sqrtx/
binary search 
class Solution {
public:
    int mySqrt(int x) {
        long left = 0;
        long right = x / 2 + 1;
        while( left < right ){
            long mid = (unsigned long)(left + right + 1) >> 1;
            long square = mid * mid;
            if( square > x){
                right = mid - 1;
            }else{
                left = mid;
            }
        }

        return (int) left;
    }
};
