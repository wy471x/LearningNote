Algorithm
https://leetcode-cn.com/problems/valid-anagram/
solution 1: hash table
class Solution {
public:
    bool isAnagram(string s, string t) {
         if( (t.empty() && !s.empty()) || (s.size() != t.size()) )
             return false;
         map<char,int> sMap,tMap;
         for(int i = 0; i < s.size(); i++){
               sMap[s[i]]++;
         }
         for(int j = 0;j < t.size(); j++){
               tMap[t[j]]++;
         }
         if(sMap.size() != tMap.size())
            return false;
         for(auto it = tMap.begin(); it != tMap.end(); it++){
             if(sMap[(*it).first] != (*it).second )
                return false;
         }
        return true;
    }
};
solution 2: sort
class Solution {
public:
    bool isAnagram(string s, string t) {
        if( (t.empty() && !s.empty()) || (s.size() != t.size()) )
             return false;
        sort(s.begin(),s.end());
        sort(t.begin(),t.end());
        if( s == t )
          return true;
        return false;
    }
};

