problem 1:
https://leetcode-cn.com/problems/reverse-integer/
class Solution {
public:
    int reverse(int x) {
        string temporaryString = to_string(x);
        string resultString;
        int i = temporaryString.size() - 1;
        long resultNumber;
        if(x < 0){
        while(i > 0){
            resultString.push_back(temporaryString[i]);
            i--;
        } 
        resultNumber = -stol(resultString);
        }else{
            while(i >= 0){
                resultString.push_back(temporaryString[i]);
                i--;
            }
            resultNumber  = stol(resultString);
        }
        if(resultNumber >INT_MAX || resultNumber < INT_MIN)
        {
            return 0;
        }
        
        return (int)resultNumber;
    }
};
problem 2:
https://leetcode-cn.com/problems/string-to-integer-atoi/
class Solution {
public:
    int myAtoi(string str) {
         if(str.empty())
            return 0;
         
    }
    bool firstIsNumber(string str){
        int i = 0;
        while( i < str.size()){
            if(isspace(str[i])){
                i++;
            }else if(is){
                 break;
            }
        }
        if(i == str.size()){
            return false;
        }
    }
};

